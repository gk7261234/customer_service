{
  "appenders": {
    "out": {
      "type": "console"
    },
    "task": {
      "type": "dateFile",
      "filename": "./logs/",
      "pattern": "yyyyMMdd.log",
      "alwaysIncludePattern":true
    }
  },
  "categories": {
    "default": {
      "appenders": ["out"],
      "level": "info"
    },
    "task": {
      "appenders":["task"],
      "level": "info"
    }
  }
}